@page
@model SimplzQuestionnaire.Pages.a.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Answer[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer[0].Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer[0].IsCustomAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Answer[0].Question)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Answer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCustomAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Question.QuestionId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AnswerId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AnswerId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AnswerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
