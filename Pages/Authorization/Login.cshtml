@page
@model SimplzQuestionnaire.Pages.Authorization.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 text-center">
        <div class="p-3 mt-5 shadow-sm border rounded">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <input asp-for="Input.Username" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password">
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary" asp-page-handler="Login">Login</button>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary" asp-page-handler="Create">Create New User</button>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
            }
        </div>
    </div>
</div>