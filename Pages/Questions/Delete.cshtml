@page "{QuestionnaireId}/{QuestionId}"
@model SimplzQuestionnaire.Pages.Questions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Timeout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Timeout)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.MaxAnswers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.MaxAnswers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.MaxPoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.MaxPoints)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Questionnaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Questionnaire.QuestionnaireId)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        <input type="hidden" asp-for="Question.QuestionId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Index" asp-route-QuestionnaireId="@Model.QuestionnaireId">Back to List</a>
    }
</div>
