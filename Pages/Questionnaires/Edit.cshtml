@page
@model SimplzQuestionnaire.Pages.Questionnaires.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Questionnaire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Questionnaire.QuestionnaireId" />
            <div class="form-group">
                <label asp-for="Questionnaire.Name" class="control-label"></label>
                <input asp-for="Questionnaire.Name" class="form-control" />
                <span asp-validation-for="Questionnaire.Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Questionnaire.Code" />
            <div class="form-group">
                <label asp-for="Questionnaire.Progression" class="control-label"></label>
                <select asp-for="Questionnaire.Progression" class="form-control" asp-items="Html.GetEnumSelectList<Model.Progression>()"></select>
                <span asp-validation-for="Questionnaire.Progression" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Questionnaire.UserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
